<div class="post">

	<div class="post-form">
		<%=form_for(@new_post) do |f| %>
			<%= f.hidden_field :author, :value => current_user.first_name %>
			<%= f.text_area :comment %><br />
			<%= f.submit "Add" %>
		<% end %>
	</div>

	<% @posts.each do |post| %>
	<div class="content">
		<div class="post-author post-info"> <%= post.author %> </div>
		<div class="post-date post-info"> <%= post.created_at.to_s(:time) %> </div>
		<div class="post-comment"> <%= post.comment %></div>
	</div>
	<% end %>
</div>